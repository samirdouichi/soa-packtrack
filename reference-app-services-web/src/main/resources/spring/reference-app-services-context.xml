<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
    <import resource="reference-app-dao-context.xml" />

    <jaxws:endpoint
            id="categoryService"
            implementor="com.sjo.services.CategoryServiceImpl"
            bindingUri="http://acme.com/services"
            wsdlLocation="xml/categoryservices.wsdl"
            address="/CategoryService">
    </jaxws:endpoint>

    <jaxws:endpoint
            id="productService"
            implementor="com.sjo.services.ProductServiceImpl"
            address="/ProductService">
    </jaxws:endpoint>


    <jaxws:endpoint
            id="accountService"
            implementor="com.sjo.services.AccountServiceImpl"
            address="/AccountService">
    </jaxws:endpoint>

    <jaxws:endpoint
            id="orderService"
            implementor="com.sjo.services.OrderServiceImpl"
            address="/OrderService">
    </jaxws:endpoint>

</beans>